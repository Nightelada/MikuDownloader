<Window x:Class="MikuDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        xmlns:local="clr-namespace:MikuDownloader"
        mc:Ignorable="d"
        Title="MikuDownloader" Height="350" Width="729" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" MinWidth="673" MinHeight="350">
    <Grid>
        <DockPanel Margin="0,0,0,303">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem x:Name="menuOpenDirectory" Header="Open Directory" Click="menuOpenDirectory_Click"/>
                    <MenuItem x:Name="menuClose" Header="Exit" Click="menuClose_Click"/>
                </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem x:Name="menuFromFile" Header="From File" Click="menuFromFile_Click"/>
                    <MenuItem x:Name="menuFromURL" Header="From URL" Click="menuFromURL_Click"/>
                    <MenuItem x:Name="menuFromList" Header="From List" Click="menuFromList_Click"/>
                    <MenuItem x:Name="menuFromFolder" Header="From Folder" Click="menuFromFolder_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <TextBlock HorizontalAlignment="Left" Margin="23,46,0,0" TextWrapping="Wrap" Text="Type URL of picture here:" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxURL" HorizontalAlignment="Left" Height="59" Margin="23,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179"/>
        <Button x:Name="btnDownloadFromURL" Content="From URL" HorizontalAlignment="Left" Margin="209,70,0,0" VerticalAlignment="Top" Width="75" Click="btnDownloadFromURL_Click"/>
        <TextBox x:Name="txtBlockData" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Margin="312,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="242" Width="389"/>
        <Button x:Name="btnDownloadFromList" Content="Download from list" HorizontalAlignment="Left" Margin="23,146,0,0" VerticalAlignment="Top" Width="133" Click="btnDownloadFromList_Click"/>
        <Button x:Name="btnDownloadFromFile" Content="From File" HorizontalAlignment="Left" Margin="23,233,0,0" VerticalAlignment="Top" Width="75" Click="btnDownLoadFromFile_Click"/>
        <Button x:Name="btnDownloadFromFolder" Content="Download from folder" HorizontalAlignment="Left" Margin="23,260,0,0" VerticalAlignment="Top" Width="133" Click="btnDownloadFromFolder_Click"/>
        <CheckBox x:Name="chkBoxIgnoreResolution" Content="Ignore resolution" HorizontalAlignment="Left" Margin="170,241,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chkBoxKeepFilenames" Content="Keep filenames" HorizontalAlignment="Left" Margin="170,265,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnDeserializeFolder" Content="Download From XML" HorizontalAlignment="Left" Margin="179,189,0,0" VerticalAlignment="Top" Width="117" Click="btnDeserializeFolder_Click"/>
        <Button x:Name="btnCheckFolder" Content="Check Folder" HorizontalAlignment="Left" Margin="23,189,0,0" VerticalAlignment="Top" Width="133" Click="btnCheckFolder_Click"/>
        <Button Content="Button" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left" Margin="598,208,0,0" VerticalAlignment="Top" Width="103" Click="Button_Click" Height="80">
            <Button.Template>
                <ControlTemplate>
                    <Image gif:AnimationBehavior.SourceUri="/Resources/test.gif"/>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
